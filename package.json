{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/react-native": "~0.63.2",
    "concurrently": "^5.3.0",
    "husky": "^7.0.2",
    "lerna": "^3.22.1"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "applications/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/expo",
      "**/expo/**",
      "**/expo-status-bar/**",
      "**/expo-status-bar"
    ]
  },
  "scripts": {
    "install": "lerna bootstrap",
    "start:web": "concurrently 'cd ./packages/holdem && npx webpack' 'cd ./applications/holdemWeb && yarn start'",
    "start:native": "cd ./applications/holdemNative && yarn start",
    "rmmodules": "find . -name 'node_modules' -type d -exec rm -rf '{}' +"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "expo": "^42.0.3",
    "expo-status-bar": "^1.0.4",
    "react-native": "^0.65.1",
    "expo-yarn-workspaces": "^1.5.2"
  }
}
