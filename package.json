{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.0",
    "@types/redux-mock-store": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "babel-jest": "27.2.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.19.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-transform-css": "^2.1.0",
    "lerna": "^3.22.1",
    "tslib": "2.3.1",
    "typescript": "3.9.5"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "applications/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/expo",
      "**/expo/**",
      "**/expo-status-bar/**",
      "**/expo-status-bar"
    ]
  },
  "scripts": {
    "install": "lerna bootstrap",
    "start:web": "concurrently 'cd ./packages/holdem && npx webpack' 'cd ./applications/holdemWeb && yarn start'",
    "start:native": "cd ./applications/holdemNative && yarn start",
    "rmmodules": "find . -name 'node_modules' -type d -exec rm -rf '{}' +",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "expo": "^42.0.3",
    "expo-status-bar": "^1.0.4",
    "expo-yarn-workspaces": "^1.5.2",
    "react-native": "^0.65.1",
    "jest-canvas-mock": "^2.3.1"
  }
}
